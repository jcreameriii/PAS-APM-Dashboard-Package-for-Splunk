<dashboard>
  <label>CyberArk Performance Monitoring Dashboard: All-In-One</label>
  <description>This dashboard displays key Digital Vault, Component Server and Application performance information, including service status, OS information, CPU usage, memory usage, disk space, execution time, queue time, task and transaction count information.</description>
  <row>
    <panel>
      <title>CyberArk Service Status</title>
      <table>
        <search>
          <query>host="10.0.1.10" OR host="10.0.1.12" Product="ApplicationMonitor" NOT Info2="Remote Desktop User Sessions" 
| rename Info2 as "Service Name" 
| rename Info3 as "Service Status" 
| rename host as "IP Address"
| rename Info1 as "Host" 
| table "IP Address", "Host", "Service Name", "Service Status", "_time" 
| dedup "Service Name"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <refresh>30s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">100</option>
        <option name="drilldown">none</option>
        <format type="number" field="Service Status"></format>
        <format type="color" field="Service Status">
          <colorPalette type="map">{"Running":#53a051, "Stopped":"0xdc4e41", "StartPending":"0xdc4e41"}</colorPalette>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>CyberArk Software Version Information</title>
      <table>
        <search>
          <query>host="10.0.1.10" OR host="10.0.1.12" Product="ApplicationMonitor" 
| rename host as "IP Address"
| rename Info1 as "Host" 
| rename Info5 as "Software Name" 
| rename Info6 as "Software Version"
| table "IP Address", "Host", "Software Name", "Software Version"
| dedup "Software Name"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <refresh>30s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>VAULT Server Administrator Logon History (Last 30 Days)</title>
      <table>
        <search>
          <query>host="10.0.1.10" Product=LogonMonitor 
| rename Info2 as Username 
| rename Info3 as SID 
| rename Info4 as LogonTime
| sort -LogonTime
|  table Username SID LogonTime 
| dedup LogonTime</query>
          <earliest>-30d@d</earliest>
          <latest>now</latest>
          <refresh>30s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Hardware Performance Monitors: VAULT</title>
    </panel>
  </row>
  <row>
    <panel>
      <title>CPU Usage % (Current)</title>
      <single>
        <search>
          <query>sourcetype=syslog Product=VaultMonitor | stats first(Info8)</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <refresh>30s</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0x53a051","0xf8be34","0xf1813f","0x006d9c","0xdc4e41"]</option>
        <option name="rangeValues">[50,70,85,170]</option>
        <option name="refresh.display">progressbar</option>
        <option name="unit">%</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <title>Memory Usage % (Current)</title>
